<Window x:Class="PL.Admin.Gantt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Admin"
        mc:Ignorable="d"
        Title="Gantt" Height="600" Width="1000"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <ItemsControl ItemsSource="{Binding ListOfTasks}" Margin="65,51,83,44">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="2" BorderBrush="Aqua">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBlock HorizontalAlignment="Left" Text="{Binding Id}" FontWeight="Bold" Background="Aquamarine"/>
                            <Rectangle HorizontalAlignment="Left" Height="20" Width="{Binding PlanToStart,Mode=TwoWay,Converter={StaticResource ConvertDateTimeToIntKey}}"  Fill="White"/>
                            <TextBlock HorizontalAlignment="Left" Text="{Binding TaskName}" Width="{Binding Duration, Mode=TwoWay, Converter={StaticResource ConvertTimeSpanToIntKey}}" FontWeight="Bold"
                                       Background="{Binding Status,Mode=TwoWay,Converter={StaticResource ConvertStatusToColorKey}}">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{Binding Name}"/>
                                            <TextBlock Text="{Binding Description}"/>
                                            <TextBlock Text="{Binding Engineer}"/>
                                            <TextBlock Text="{Binding StartWork}"/>
                                            <TextBlock Text="{Binding FinishDate}"/>
                                        </StackPanel>
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Label Content="Scheduled" HorizontalAlignment="Left" Margin="756,548,0,0" VerticalAlignment="Top" Background="Gray" Width="68"/>
        <Label Content="OnTrack" HorizontalAlignment="Left" Margin="843,548,0,0" VerticalAlignment="Top" Background="Orange"/>
        <Label Content="Done" HorizontalAlignment="Left" Margin="916,548,0,0" VerticalAlignment="Top" Background="Green"/>


    </Grid>
</Window>

