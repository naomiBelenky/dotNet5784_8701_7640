<Window x:Class="PL.Engineer.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontSize" Value="17" />
        </Style>
    </Window.Resources>
    <Grid>
        <Button Content="Engineer List" HorizontalAlignment="Left" Margin="200,280,0,0" VerticalAlignment="Top" Height="82" Width="157" Click="EngBtn_Click"/>
        <Button Content="Task List" HorizontalAlignment="Left" Margin="430,280,0,0" VerticalAlignment="Top" Height="82" Width="157" Click="TaskBtn_Click"/>

    </Grid>
</Window>
